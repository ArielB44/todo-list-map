generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int        @id @default(autoincrement())
  content   String
  status    TaskStatus @default(PENDING)
  latitude  Float?
  longitude Float?
  createdAt DateTime   @default(now())
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}